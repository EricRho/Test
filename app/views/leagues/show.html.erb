<p id="notice"><%= notice %></p>

<h1>
  <strong>League:</strong>
  <small><%= @league.name %></small>
</h1>
<div ng-controller='teamsCtrl'>

  <table class='table table-striped'>
    <thead>
      <tr class='clickable'>
        <th>Name</th>
        <th colspan='3'></th>
      </tr>
    </thead>

    <tbody>
      <% @league.teams.each do |team| %>
        <tr>
          <td><%= link_to team.name, edit_team_path(team) %></td>
          <td><%= link_to 'Delete', team, method: :delete, data: { confirm: 'Are you sure?'} %></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to 'Create Team', new_team_path(@league) %>

<%= link_to 'Edit', edit_league_path(@league) %> |
<%= link_to 'Back', leagues_path %>
